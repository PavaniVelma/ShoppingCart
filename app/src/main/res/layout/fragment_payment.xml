<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_16dp"
    android:padding="@dimen/_8dp"
    tools:context=".view.checkout.PaymentFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_select_option"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_payment_option"
        style="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_select_option">


            <RadioButton
                android:id="@+id/btn_delivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16dp"
                android:paddingVertical="@dimen/_8dp"
                android:background="@drawable/rectangle_shape"
                android:text="@string/tcash_on_delivery"
                android:textColor="@color/black"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layoutDirection="rtl"
                android:textAlignment="textStart"
                app:layout_constraintTop_toBottomOf="@id/tv_select_option"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <RadioButton
                android:id="@+id/btn_internet_banking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16dp"
                android:paddingVertical="@dimen/_8dp"
                android:background="@drawable/rectangle_shape"
                android:text="@string/tinternet_banking"
                android:textColor="@color/black"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layoutDirection="rtl"
                android:textAlignment="textStart"
                app:layout_constraintTop_toBottomOf="@id/tv_select_option"
                app:layout_constraintEnd_toEndOf="parent"
                />



            <RadioButton
                android:id="@+id/btn_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16dp"
                android:paddingVertical="@dimen/_8dp"
                android:background="@drawable/rectangle_shape"
                android:text="@string/tdebit_card_credit_card"
                android:textColor="@color/black"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layoutDirection="rtl"
                android:textAlignment="textStart"
                app:layout_constraintTop_toBottomOf="@id/tv_select_option"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <RadioButton
                android:id="@+id/btn_payPal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16dp"
                android:paddingVertical="@dimen/_8dp"
                android:background="@drawable/rectangle_shape"
                android:text="@string/tpay_pal"
                android:textColor="@color/black"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layoutDirection="rtl"
                android:textAlignment="textStart"
                app:layout_constraintTop_toBottomOf="@id/tv_select_option"
                app:layout_constraintEnd_toEndOf="parent"
                />



    </RadioGroup>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_next"
        android:text="@string/next"
        style="@style/PrimaryButton"
        android:background="@drawable/button_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/radioGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/_16dp"
        app:layout_constraintVertical_bias="1"
        android:layout_marginBottom="@dimen/_24dp"/>







</androidx.constraintlayout.widget.ConstraintLayout>